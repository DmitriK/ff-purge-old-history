{
    "manifest_version": 2,
    "name": "Purge Old History",
    "version": "1.0",
    "description": "Removes history entries older than a specified age.",

    "applications": {
        "gecko": {
          "strict_min_version": "49.*"
        }
    },
    "permissions": [
        "alarms",
        "history",
        "storage"
    ],
    "background": {
        "scripts": ["purge-daemon.js"]
    },
    "options_ui": {
        "page": "options.html"
    }
}
